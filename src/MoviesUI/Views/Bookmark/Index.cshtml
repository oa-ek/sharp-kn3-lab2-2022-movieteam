
@model IEnumerable<MoviesCore.Movie>
@if(Model != null)
{
	@foreach (var item in Model)
		{
			<div class="col-3">
				<div class="card" style="width: 18rem;">
					<img class="card-img-top" src=@Html.DisplayFor(modelItem => item.PosterPath) alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
						<p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
						<p class="card-text">@Html.DisplayFor(modelItem => item.Genres)</p>
						<a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-warning">Remove from bookmark</a>
					</div>
				</div>
			</div>
		}
}
